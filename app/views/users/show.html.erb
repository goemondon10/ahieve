<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @user.image %>
</p>


<h3>お気に入り登録</h3>

<% @favorites_blogs.each do |blog| %>
<div>
  投稿者：<%= blog.user.name %>
</div>
<div>
  タイトル：<%= blog.title %> 
</div>
<div>
  コメント内容：<%= blog.content %>
</div>
<br>
<br>

<div>
  <strong>Image:</strong>
  <%= image_tag blog.image %>
</div>

<hr>
<% end %>
